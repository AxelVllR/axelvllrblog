<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>AxelVllR | ADMIN</title>

  <!-- Google Font: Source Sans Pro -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="http://localhost:8001/adminstyle/plugins/fontawesome-free/css/all.min.css">
  <!-- Ionicons -->
  <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
  <!-- Tempusdominus Bootstrap 4 -->
  <link rel="stylesheet" href="http://localhost:8001/adminstyle/plugins/tempusdominus-bootstrap-4/css/tempusdominus-bootstrap-4.min.css">
  <!-- iCheck -->
  <link rel="stylesheet" href="http://localhost:8001/adminstyle/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
  <!-- JQVMap -->
  <link rel="stylesheet" href="http://localhost:8001/adminstyle/plugins/jqvmap/jqvmap.min.css">
  <!-- Theme style -->
  <link rel="stylesheet" href="http://localhost:8001/adminstyle/dist/css/adminlte.min.css">
  <!-- overlayScrollbars -->
  <link rel="stylesheet" href="http://localhost:8001/adminstyle/plugins/overlayScrollbars/css/OverlayScrollbars.min.css">
  <!-- Daterange picker -->
  <link rel="stylesheet" href="http://localhost:8001/adminstyle/plugins/daterangepicker/daterangepicker.css">
  <!-- summernote -->
  <link rel="stylesheet" href="http://localhost:8001/adminstyle/plugins/summernote/summernote-bs4.min.css">
</head>
<body class="hold-transition sidebar-mini layout-fixed">
<div class="wrapper">

  <!-- Navbar -->
  <nav class="main-header navbar navbar-expand navbar-white navbar-light">
    <!-- Left navbar links -->
    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
      </li>
    </ul>

    <!-- Right navbar links -->
    <ul class="navbar-nav ml-auto">
      <li class="nav-item">
        <a class="nav-link" href="/" role="button">
          <i class="fas fa-home mr-2"></i>
          Retour sur le site
        </a>
      </li>
    </ul>
  </nav>
  <!-- /.navbar -->

  <!-- Main Sidebar Container -->
  <aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->
    <div class="brand-link">
      <img src="http://localhost:8001/adminstyle/dist/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
      <span class="brand-text font-weight-light">AxelVllR | ADMIN</span>
    </div>

    <!-- Sidebar -->
    <div class="sidebar">
      <!-- Sidebar user panel (optional) -->
      <div class="user-panel mt-3 pb-3 mb-3 d-flex">
        <div class="image">
          <img src="http://localhost:8001/adminstyle/dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
        </div>
        <div class="info">
          <div class="d-block text-white">{{ session.username }}</div>
        </div>
      </div>

      <!-- Sidebar Menu -->
      <nav class="mt-2">
        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
          <li class="nav-item">
            <a href="/admin" class="nav-link active">
              <i class="nav-icon fas fa-th"></i>
              <p>
                Tableau de bord
              </p>
            </a>
          </li>
          <li class="nav-item">
            <a href="/admin/posts" class="nav-link">
              <i class="nav-icon fas fa-paste"></i>
              <p>
                Articles
              </p>
            </a>
          </li>
        </ul>
      </nav>
      <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
  </aside>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0">Tableau de Bord</h1>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <!-- Small boxes (Stat box) -->
        <div class="row">
          <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-info">
              <div class="inner">
                <h3>{{ users|length }}</h3>

                <p>Utilisateurs</p>
              </div>
              <div class="icon">
                <i class="fas fa-users"></i>
              </div>
              <!--<a href="#" class="small-box-footer">Plus d'infos <i class="fas fa-arrow-circle-right"></i></a>-->
            </div>
          </div>
          <!-- ./col -->
          <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-success">
              <div class="inner">
                {% if comments|length > 0 %}
                <h3>{{ (commentsToValidate|length / comments|length * 100)|round }}<sup style="font-size: 20px">%</sup></h3>
                {% else %}
                  <h3>0<sup style="font-size: 20px">%</sup></h3>
                {% endif %}
                <p>Commentaires non vérifiés</p>
              </div>
              <div class="icon">
                <i class="ion ion-stats-bars"></i>
              </div>
              <!--<a href="#" class="small-box-footer">Plus d'infos <i class="fas fa-arrow-circle-right"></i></a>-->
            </div>
          </div>
          <!-- ./col -->
          <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-warning">
              <div class="inner">
                <h3>{{ posts|length }}</h3>

                <p>Articles</p>
              </div>
              <div class="icon">
                <i class="fas fa-paste"></i>
              </div>
              <!--<a href="#" class="small-box-footer">Plus d'infos <i class="fas fa-arrow-circle-right"></i></a>-->
            </div>
          </div>
          <!-- ./col -->
          <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-danger">
              <div class="inner">
                <h3>{{ postsViews|length }}</h3>

                <p>Articles avec plus de 30 vues</p>
              </div>
              <div class="icon">
                <i class="ion ion-pie-graph"></i>
              </div>
              <!--<a href="#" class="small-box-footer">Plus d'infos <i class="fas fa-arrow-circle-right"></i></a>-->
            </div>
          </div>
          <!-- ./col -->
        </div>
        <!-- /.row -->
        <!-- Main row -->
        <div class="row">
          <!-- right col -->
          <div class="col-12 card">
            <div class="card-header">
              <h3 class="card-title">Commentaires à vérifier</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body p-0 table-responsive">
              <table class="table">
                <thead>
                <tr>
                  <th style="width: 10px">Utilisateur</th>
                  <th>Contenu</th>
                  <th>Article</th>
                  <th>Ecrit le</th>
                  <th style="width: 40px">Actions</th>
                </tr>
                </thead>
                <tbody>
                  {% for comment in commentsToValidate %}
                    <tr>
                      <td>{{ comment.user.username }}</td>
                      <td>{{ comment.comment }}</td>
                      <td>
                        {{ comment.post.title }}
                      </td>
                      <td>{{ comment.created_at|date('d-m-Y') }}</td>
                      <td class="d-flex justify-content-center align-items-center">
                        <a class="btn btn-success btn-sm mr-2" href="/comment/{{ comment.id }}-1">
                          <i class="fas fa-check"></i>
                        </a>
                        <a class="btn btn-danger btn-sm" href="/comment/{{ comment.id }}-0">
                          <i class="fas fa-times"></i>
                        </a>
                      </td>
                    </tr>
                  {% endfor %}
                </tbody>
              </table>
            </div>
            <!-- /.card-body -->
          </div>
        </div>
        <div class="row">
          <!-- right col -->
          <div class="col-12 card">
            <div class="card-header">
              <h3 class="card-title">Utilisateurs</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body p-0 table-responsive">
              <table class="table">
                <thead>
                <tr>
                  <th>Username</th>
                  <th>Nom</th>
                  <th>Prénom</th>
                  <th>Email</th>
                  <th>Role</th>
                  <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                  <tr>
                    <td>{{ user.username }}</td>
                    <td>{{ user.lastname }}</td>
                    <td>
                      {{ user.firstname }}
                    </td>
                    <td>{{ user.email }}</td>
                    <td>
                      {% if user.role == 'ROLE_ADMIN' %}
                        <span class="badge badge-danger">Administrateur</span>
                      {% else %}
                        <span class="badge badge-info">Utilisateur Basique</span>
                      {% endif %}
                    </td>
                    <td class="d-flex justify-content-start align-items-center">
                      {% if session.id != user.id %}
                        {% if user.role == 'ROLE_USER' %}
                          <a class="btn btn-danger btn-sm mr-2 d-flex justify-content-center align-items-center" href="/users/role_admin-{{ user.id }}">
                            <i class="fas fa-user mr-2"></i>
                            <span>Passer Admin</span>
                          </a>
                        {% elseif user.role == 'ROLE_ADMIN' %}
                          <a class="btn btn-info btn-sm mr-2 d-flex justify-content-center align-items-center" href="/users/role_user-{{ user.id }}">
                            <i class="fas fa-user-shield mr-2"></i>
                            <span>Passer Utilisateur</span>
                          </a>
                        {% endif %}
                        <a class="btn btn-danger btn-sm" href="/users/delete-{{ user.id }}">
                          <i class="fas fa-trash-alt"></i>
                        </a>
                      {% else %}
                        <span class="badge badge-warning">VOUS</span>
                      {% endif %}
                    </td>
                  </tr>
                {% endfor %}
                </tbody>
              </table>
            </div>
            <!-- /.card-body -->
          </div>
        </div>
        <!-- /.row (main row) -->
      </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

  <!-- Control Sidebar -->
  <aside class="control-sidebar control-sidebar-dark">
    <!-- Control sidebar content goes here -->
  </aside>
  <!-- /.control-sidebar -->
</div>
<!-- ./wrapper -->

