{% include 'blocks/block_header.html.twig' %}
<!-- Intro Section-->
<section class="intro">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="col-lg-8">
                <h2 class="h3 text-center m-4">PROFIL</h2>
                {% if error is defined and error != null %}
                    <div class="alert alert-danger" role="alert">
                        {{ error }}
                    </div>
                {% endif %}
                {% if success is defined and success != null %}
                    <div class="alert alert-success" role="alert">
                        {{ success }}
                    </div>
                {% endif %}
                {{ form | raw }}
                <a href="/profile/update_password" class="btn btn-danger">Modifier mon mot de passe</a>
            </div>
        </div>
    </div>
</section>
{% include 'blocks/block_footer.html.twig' %}